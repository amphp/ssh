{
    "name": "amphp/ssh",
    "homepage": "https://github.com/amphp/ssh",
    "description": "Async SSH client for PHP based on Amp.",
    "keywords": [
        "ssh",
        "ssh2",
        "sftp",
        "scp",
        "client",
        "async",
        "amp",
        "amphp"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Joel Wurtz",
            "email": "jwurtz@jolicode.com"
        }
    ],
    "require": {
        "php": ">=7",
        "ext-sodium": "*",
        "amphp/socket": "dev-master as 1.0.0",
        "amphp/file": "^0.3",
        "amphp/amp": "^2.1.1",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "amphp/phpunit-util": "^1",
        "friendsofphp/php-cs-fixer": "^2.9",
        "monolog/monolog": "^1.23",
        "phpunit/phpunit": "^6.5"
    },
    "autoload": {
        "psr-4": {
            "Amp\\Ssh\\": "src"
        },
        "files": [
            "src/functions.php",
            "src/Transport/functions.php"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "phpdbg -qrr vendor/bin/phpunit --coverage-text --coverage-clover build/logs/clover.xml",
        "lint": "vendor/bin/php-cs-fixer --diff --dry-run -v fix"
    }
}
